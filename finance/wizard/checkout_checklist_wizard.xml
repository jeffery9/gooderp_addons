<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="checkout_checklist_wizard_form" model="ir.ui.view">
            <field name="name">checkout.checklist.form</field>
            <field name="model">checkout.checklist</field>
            <field name="arch" type="xml">
                <form string="期末结转" class="oe_form_configuration">
                    <header>
                    </header>
                    <group >
                        <field name='period_id' options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" />
                    </group>
                    <group string="风险列表">
                        <field name="msg_voucher_depreciation" />
                        <field name="msg_voucher_exchange" />
                        <field name="msg_voucher_profit" />
                        <field name="msg_trial_balance" />
                        <field name="msg_balance_sheet" />
                        <field name="msg_account_cash" />
                        <field name="msg_account_bank" />
                        <field name="msg_account_good" />
                        <field name="msg_account_fixed_asset" />
                        <field name="msg_account_intangible_asset" />
                        <field name="show_button" invisible="1"/>
                    </group>
                    <group string="检查结论" colspan="4">
                        <field name="result" />
                    </group>
                    <footer>
                        <!-- <button string="关闭" special="cancel" class="oe_link" /> -->
                        <button name="check_items" string="检查风险" type="object" attrs="{ 'invisible': [('show_button','=', False)]  }"/>
                        <button string="结账" name="close_period" type="object" class="oe_highlight" attrs="{ 'invisible': [('result','in',('error', 'blank'))]  }" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="preiod_checklist_action" model="ir.actions.act_window">
            <field name="name">结账</field>
            <field name="res_model">checkout.checklist</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!--结账菜单-->
        <menuitem id='preiod_checklist_menu' name='结账' action='preiod_checklist_action' parent='checkout_menu' sequence='30' />
    </data>
</odoo>